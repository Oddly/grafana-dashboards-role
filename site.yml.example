---
- hosts: localhost
  connection: local
  gather_facts: false
  roles:
    - role: "{{ playbook_dir }}"
      vars:
        grafana_url: "http://grafana.example.com:3000"
        grafana_auth: "admin:changeme"
        elasticsearch_url: "https://es.example.com:9200"
        elasticsearch_user: "elastic"
        elasticsearch_password: "changeme"
        elasticsearch_tls_skip_verify: true
        grafana_dashboards_path: "{{ playbook_dir }}/.."

        # Service toggles — disable any group you don't need
        # grafana_dashboards_elasticsearch: true
        # grafana_dashboards_logstash: true
        # grafana_dashboards_grafana: true
        # grafana_dashboards_linux: true
        # grafana_dashboards_network: true
        # grafana_dashboards_netflow: false
        # grafana_dashboards_security: true

        # Infinity datasources — enable for direct API access panels
        # Requires: grafana-cli plugins install yesoreyeram-infinity-datasource
        grafana_dashboards_infinity: false
        # infinity_elasticsearch_url: "https://es.example.com:9200"
        # infinity_elasticsearch_tls_skip_verify: true
        # infinity_logstash_url: "http://logstash.example.com:9600"
        # infinity_grafana_url: "http://grafana.example.com:3000"
